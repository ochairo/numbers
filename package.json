{
  "name": "@ochairo/numbers",
  "version": "0.0.3",
  "description": "Primitive-like integer and decimal types for safe arithmetic",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.*",
    "!dist/**/*.map",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && pnpm build:minify",
    "build:minify": "esbuild dist/index.js dist/integer.js dist/decimal.js --outdir=dist --format=esm --allow-overwrite --minify --legal-comments=none --tree-shaking=true",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "size": "ls -lh dist/*.js | awk '{print $9, $5}'"
  },
  "keywords": [
    "integer",
    "decimal",
    "bigint",
    "arbitrary-precision",
    "ochairo"
  ],
  "author": "ochairo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ochairo/numbers"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
